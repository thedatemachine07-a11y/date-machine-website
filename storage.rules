rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /sponsors/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /shop-items/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
